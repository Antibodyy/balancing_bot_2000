<mujoco model="balance_bot">
  <compiler angle="radian" inertiafromgeom="true"/>

  <option timestep="0.001" gravity="0 0 -9.81">
    <flag contact="enable" warmstart="enable"/>
  </option>

  <visual>
    <rgba haze="0.15 0.25 0.35 1"/>
    <quality shadowsize="2048"/>
    <global fovy="50"/>
  </visual>

  <!-- Default tracking camera for viewer mode -->
  <statistic center="0 0 0.3" extent="3"/>

  <default>
    <geom contype="1" conaffinity="1" condim="3" friction="1.5 0.1 0.1"/>
    <motor ctrlrange="-1 1"/>
  </default>

  <worldbody>
    <light pos="0 0 3" dir="0 0 -1" directional="true"/>

    <!-- Floor with high friction for no-slip rolling -->
    <geom name="floor" type="plane" size="0 0 0.05" rgba=".8 .9 .8 1"/>

    <!-- Robot with freejoint (position emerges from wheel rolling) -->
    <body name="robot" pos="0 0 0.25" euler="0 0 0">
      <freejoint name="robot_free"/>

      <camera name="chase" mode="fixed" pos="-0.8 0 0.4" xyaxes="0 -1 0 0 0 1"/>

      <!-- Main body: box 0.1x0.1x0.4m at COM height 0.2m above axle -->
      <geom name="body_box" type="box" size="0.05 0.05 0.2" pos="0 0 0"
            rgba="0.9 0.5 0.1 1" mass="1.5" contype="0" conaffinity="0"/>

      <!-- Right wheel at axle level, offset -0.15m in y -->
      <body name="wheel_r" pos="0 -0.15 -0.2">
        <joint name="motor_r" type="hinge" axis="0 1 0" damping="0.001"/>
        <geom name="wheel_r_geom" type="cylinder" size="0.05 0.02"
              rgba="0.1 0.1 0.1 1" mass="0.5"
              euler="1.5708 0 0"/>
      </body>

      <!-- Left wheel at axle level, offset +0.15m in y -->
      <body name="wheel_l" pos="0 0.15 -0.2">
        <joint name="motor_l" type="hinge" axis="0 1 0" damping="0.001"/>
        <geom name="wheel_l_geom" type="cylinder" size="0.05 0.02"
              rgba="0.1 0.1 0.1 1" mass="0.5"
              euler="1.5708 0 0"/>
      </body>
    </body>

    <!-- Tracking camera for viewer mode - follows robot from the side -->
    <camera name="tracking_cam" mode="targetbody" target="robot" pos="0 -2.5 0.6" xyaxes="1 0 0 0 0 1"/>
  </worldbody>

  <actuator>
    <!-- Direct torque control on wheel joints -->
    <motor name="left" joint="motor_l" gear="1.0"/>
    <motor name="right" joint="motor_r" gear="1.0"/>
  </actuator>
</mujoco>